{
  "name": "@init/db",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "exports": {
    "./*": "./src/*.ts"
  },
  "scripts": {
    "clean": "rm -rf .turbo node_modules",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "lint": "eslint . && supabase db lint",
    "supabase": "supabase",
    "start": "supabase status || supabase start",
    "stop": "supabase stop",
    "reset": "supabase db reset",
    "status": "supabase status",
    "test": "supabase db test",
    "deploy": "supabase link --project-ref $SUPABASE_PROJECT_REF && supabase db push",
    "typegen": "supabase gen types typescript --local > src/database.types.ts",
    "dump": "supabase db dump --local --data-only",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@supabase/ssr": "^0.3.0",
    "@supabase/supabase-js": "^2.43.4",
    "next": "^14.2.3",
    "react": "^18.3.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@kyh/eslint-config": "^0.1.8",
    "@kyh/prettier-config": "^0.1.8",
    "@kyh/tsconfig": "^0.1.8",
    "@types/react": "^18.3.3",
    "eslint": "^8.57.0",
    "prettier": "^3.3.1",
    "supabase": "^1.172.2",
    "typescript": "^5.4.5"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@kyh/eslint-config/base"
    ]
  },
  "prettier": "@kyh/prettier-config"
}
