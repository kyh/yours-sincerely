{
  "private": true,
  "name": "yours-sincerely",
  "description": "An ephemeral anonymous blog to send each other tiny beautiful letters",
  "license": "MIT",
  "prisma": {
    "seed": "npx ts-node -T prisma/seed.ts"
  },
  "scripts": {
    "build-android": "cross-env NODE_ENV=production npm run build-web && npx cap copy",
    "build-ios": "cross-env NODE_ENV=production npm run build-web && npx cap copy",
    "build": "run-s build:prisma build:css build:remix",
    "build:prisma": "npm run prisma-generate",
    "build:css": "tailwindcss -m -i ./styles/global.css -o ./app/tailwind.css",
    "build:remix": "cross-env NODE_ENV=production remix build",
    "dev-android": "npx cap run android",
    "dev-ios": "npx cap run ios",
    "dev": "run-p dev:*",
    "dev:css": "tailwindcss -w -i ./styles/global.css -o ./app/tailwind.css",
    "dev:remix": "cross-env NODE_ENV=development remix dev",
    "prisma-generate": "prisma generate",
    "prisma-seed": "prisma db seed",
    "prisma-push": "prisma db push",
    "prisma-studio": "prisma studio",
    "sync": "npx cap sync"
  },
  "dependencies": {
    "capacitor-plugin-safe-area": "^1.0.1",
    "@capacitor/android": "^4.6.1",
    "@capacitor/core": "^4.6.1",
    "@capacitor/ios": "^4.6.1",
    "@headlessui/react": "^1.7.9",
    "@mojs/core": "^1.4.0",
    "@prisma/client": "^4.9.0",
    "@react-hook/hotkey": "^3.1.0",
    "@remix-run/node": "^1.12.0",
    "@remix-run/react": "^1.12.0",
    "@remix-run/vercel": "^1.12.0",
    "@vercel/node": "^2.6.2",
    "bcryptjs": "^2.4.3",
    "date-fns": "^2.29.3",
    "dotenv-cli": "^6.0.0",
    "framer-motion": "^9.0.1",
    "nprogress": "^0.2.0",
    "postmark": "^3.0.15",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-infinite-scroll-hook": "^4.0.4",
    "react-popper": "^2.3.0",
    "remix-auth": "^3.4.0",
    "remix-auth-form": "^1.3.0",
    "remix-auth-google": "^1.2.0",
    "remix-utils": "^6.0.0"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "@capacitor/cli": "^4.6.1",
    "@remix-run/dev": "^1.12.0",
    "@remix-run/eslint-config": "^1.12.0",
    "@remix-run/serve": "^1.12.0",
    "@tailwindcss/forms": "^0.5.3",
    "@tailwindcss/typography": "^0.5.9",
    "@types/bcryptjs": "^2.4.2",
    "@types/nprogress": "^0.2.0",
    "@types/react": "^18.0.27",
    "@types/react-dom": "^18.0.10",
    "eslint": "^8.33.0",
    "npm-run-all": "^4.1.5",
    "prisma": "^4.9.0",
    "tailwindcss": "^3.2.4",
    "typescript": "^4.9.5"
  },
  "engines": {
    "node": ">=16"
  },
  "sideEffects": false
}
