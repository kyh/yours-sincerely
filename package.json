{
  "private": true,
  "name": "yours-sincerly",
  "description": "An ephemeral anonymous blog to send each other tiny beautiful letters",
  "license": "MIT",
  "type": "commonjs",
  "prisma": {
    "seed": "npx ts-node -T prisma/seed.ts"
  },
  "scripts": {
    "build": "npm run build:prisma && npm run build:css && npm run build:remix",
    "build:prisma": "PRISMA_CLIENT_ENGINE_TYPE='dataproxy' dotenv -- prisma generate",
    "build:css": "tailwindcss -i ./styles/global.css -o ./app/tailwind.css --minify",
    "build:remix": "remix build",
    "dev": "concurrently \"npm:dev:*\"",
    "dev:css": "tailwindcss -i ./styles/global.css -o ./app/tailwind.css --watch",
    "dev:remix": "remix dev",
    "postinstall": "remix setup node",
    "start": "remix-serve build",
    "docker:start": "docker-compose up -d",
    "docker:stop": "docker-compose down",
    "prisma:generate": "dotenv -- prisma generate",
    "prisma:migrate": "dotenv -- prisma db push",
    "prisma:reset": "dotenv -- prisma migrate reset",
    "prisma:seed": "dotenv -- prisma db seed"
  },
  "dependencies": {
    "@headlessui/react": "^1.4.2",
    "@mojs/core": "^1.2.1",
    "@prisma/client": "^3.8.0",
    "@react-hook/hotkey": "^3.1.0",
    "@remix-run/react": "^1.1.1",
    "@remix-run/serve": "^1.1.1",
    "@remix-run/vercel": "^1.1.1",
    "bcrypt": "^5.0.1",
    "date-fns": "^2.28.0",
    "dotenv-cli": "^4.1.1",
    "framer-motion": "^6.2.3",
    "nprogress": "^0.2.0",
    "posthog-js": "^1.17.1",
    "postmark": "^2.8.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-infinite-scroll-hook": "^4.0.1",
    "react-popper": "^2.2.5",
    "react-portal": "^4.2.1",
    "remix": "^1.1.1",
    "remix-auth": "^3.1.0",
    "remix-auth-form": "^1.1.1",
    "remix-auth-google": "^1.0.1",
    "remix-utils": "^2.4.0",
    "ts-custom-error": "^3.2.0"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.1.1",
    "@tailwindcss/forms": "^0.4.0",
    "@tailwindcss/typography": "^0.5.0",
    "@types/bcrypt": "^5.0.0",
    "@types/nprogress": "^0.2.0",
    "@types/react": "^17.0.24",
    "@types/react-dom": "^17.0.9",
    "@types/react-portal": "^4.0.4",
    "concurrently": "^7.0.0",
    "husky": "^7.0.1",
    "prettier": "^2.2.1",
    "pretty-quick": "^3.1.0",
    "prisma": "^3.8.0",
    "tailwindcss": "^3.0.13",
    "typescript": "^4.1.2"
  },
  "engines": {
    "node": ">=14"
  },
  "sideEffects": false
}
