{
  "name": "yours-sincerely",
  "description": "To write is to put pen to paper or fingers to keyboard. If you have trouble falling asleep, write down all the thoughts swimming around your head before getting into bed as a way to clear your mind.",
  "author": "Kaiyu Hsu <im.kaiyu@gmail.com> (http://github.com/tehkaiyu)",
  "license": "MIT",
  "version": "0.0.0",
  "main": "server/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/its-bananas/yours-sincerely"
  },
  "engines": {
    "node": "10.15.3",
    "npm": "6.9.0"
  },
  "scripts": {
    "setup": "npm i && node tools/generate-env && npm run deploy:schema",
    "dev": "env-cmd ./config/.env.local nodemon server/index.js --ext js,graphql",
    "dev:storybook": "start-storybook -p 5010 -s ./client",
    "build": "env-cmd ./config/.env.local next build client",
    "deploy": "node tools/deploy",
    "deploy:schema": "prisma deploy",
    "deploy:storybook": "storybook-to-ghpages",
    "test": "env-cmd ./config/.env.test jest --watch --runInBand",
    "create:components": "node ./tools/components/create-components.js",
    "heroku-postbuild": "npm run build"
  },
  "_moduleAliases": {
    "@server": "./server",
    "@client": "./client",
    "@components": "./client/components"
  },
  "jest": {
    "setupTestFrameworkScriptFile": "./tests/setup.js"
  },
  "dependencies": {
    "@material-ui/core": "^3.9.3",
    "@material-ui/icons": "^3.0.2",
    "adorable-avatars": "^0.3.0",
    "apollo-boost": "^0.3.1",
    "aws-sdk": "^2.437.0",
    "bcrypt": "^3.0.6",
    "env-cmd": "^8.0.2",
    "formik": "^1.5.2",
    "formik-material-fields": "0.0.4",
    "graphql": "^14.2.1",
    "graphql-shield": "^5.3.3",
    "graphql-tag": "^2.10.1",
    "graphql-yoga": "^1.17.4",
    "helmet": "^3.16.0",
    "isomorphic-unfetch": "^3.0.0",
    "jsonwebtoken": "^8.5.1",
    "jss": "^9.8.7",
    "lodash": "^4.17.11",
    "module-alias": "^2.2.0",
    "moniker": "^0.1.2",
    "next": "^8.0.4",
    "next-offline": "^3.3.8",
    "nprogress": "^0.2.0",
    "prisma-binding": "^2.3.10",
    "prisma-client-lib": "^1.30.1",
    "prop-types": "^15.7.2",
    "react": "^16.8.6",
    "react-apollo": "^2.5.4",
    "react-content-loader": "^4.2.1",
    "react-dom": "^16.8.6",
    "react-jss": "^8.6.1",
    "react-swipeable-views": "^0.13.1",
    "react-transition-group": "^2.9.0",
    "reflexbox": "^3.0.1",
    "uuid": "^3.3.2",
    "yup": "^0.27.0"
  },
  "devDependencies": {
    "@sambego/storybook-state": "^1.3.4",
    "@storybook/addon-a11y": "^5.0.8",
    "@storybook/addon-actions": "^5.0.8",
    "@storybook/addon-console": "^1.1.0",
    "@storybook/addon-knobs": "^5.0.8",
    "@storybook/addon-links": "^5.0.8",
    "@storybook/addon-notes": "^5.0.8",
    "@storybook/addon-storysource": "^5.0.8",
    "@storybook/addon-viewport": "^5.0.8",
    "@storybook/react": "^5.0.8",
    "@storybook/storybook-deployer": "^2.8.1",
    "babel-eslint": "^10.0.1",
    "babel-plugin-module-resolver": "^3.2.0",
    "eslint": "^5.16.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-plugin-import": "^2.17.1",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-react": "^7.12.4",
    "fs-extra": "^7.0.0",
    "husky": "^1.3.1",
    "inquirer": "^6.3.1",
    "jest": "^24.7.1",
    "nodemon": "^1.18.11",
    "prettier": "^1.17.0",
    "pretty-quick": "^1.10.0",
    "react-test-renderer": "^16.8.6"
  }
}
