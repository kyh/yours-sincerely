{
  "private": true,
  "name": "yours-sincerly",
  "description": "An ephemeral anonymous blog to send each other tiny beautiful letters",
  "license": "MIT",
  "type": "commonjs",
  "prisma": {
    "seed": "npx ts-node -T prisma/seed.ts"
  },
  "scripts": {
    "build": "npm run build:prisma && npm run build:css && npm run build:remix",
    "build:prisma": "npm run prisma:generate",
    "build:css": "tailwindcss -m -i ./styles/global.css -o ./app/tailwind.css",
    "build:remix": "remix build",
    "dev": "concurrently \"npm:dev:*\"",
    "dev:css": "tailwindcss -w -i ./styles/global.css -o ./app/tailwind.css",
    "dev:remix": "remix dev",
    "start": "remix-serve build",
    "prisma:generate": "dotenv -- prisma generate",
    "prisma:migrate": "dotenv -- prisma db push",
    "prisma:reset": "dotenv -- prisma migrate reset",
    "prisma:seed": "dotenv -- prisma db seed",
    "prisma:studio": "prisma studio",
    "docker:start": "docker-compose up -d",
    "docker:stop": "docker-compose down"
  },
  "dependencies": {
    "@headlessui/react": "^1.4.2",
    "@mojs/core": "^1.2.1",
    "@prisma/client": "^4.0.0",
    "@react-hook/hotkey": "^3.1.0",
    "@remix-run/node": "^1.3.3",
    "@remix-run/react": "^1.3.3",
    "@remix-run/serve": "^1.3.3",
    "@remix-run/vercel": "^1.3.3",
    "bcrypt": "^5.0.1",
    "date-fns": "^2.28.0",
    "dotenv-cli": "^6.0.0",
    "framer-motion": "^7.1.2",
    "nprogress": "^0.2.0",
    "posthog-js": "^1.17.1",
    "postmark": "^3.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-infinite-scroll-hook": "^4.0.1",
    "react-popper": "^2.2.5",
    "react-portal": "^4.2.1",
    "remix-auth": "^3.1.0",
    "remix-auth-form": "^1.1.1",
    "remix-auth-google": "^1.0.1",
    "remix-utils": "^3.0.0",
    "ts-custom-error": "^3.2.0"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.3.3",
    "@tailwindcss/forms": "^0.5.0",
    "@tailwindcss/typography": "^0.5.0",
    "@types/bcrypt": "^5.0.0",
    "@types/nprogress": "^0.2.0",
    "@types/react": "^18.0.15",
    "@types/react-dom": "^18.0.6",
    "@types/react-portal": "^4.0.4",
    "concurrently": "^7.0.0",
    "husky": "^8.0.1",
    "prettier": "^2.2.1",
    "pretty-quick": "^3.1.0",
    "prisma": "^4.0.0",
    "tailwindcss": "^3.0.13",
    "typescript": "^4.1.2"
  },
  "engines": {
    "node": ">=14"
  },
  "sideEffects": false
}
