{
  "private": true,
  "name": "yours-sincerely",
  "description": "An ephemeral anonymous blog to send each other tiny beautiful letters",
  "license": "MIT",
  "prisma": {
    "seed": "npx ts-node -T prisma/seed.ts"
  },
  "scripts": {
    "sync": "npx cap sync",
    "open-android": "npx cap open android",
    "open-ios": "npx cap open ios",
    "build": "run-s build:prisma build:css build:remix",
    "build:prisma": "npm run prisma-generate",
    "build:css": "tailwindcss -m -i ./styles/global.css -o ./app/tailwind.css",
    "build:remix": "cross-env NODE_ENV=production remix build",
    "dev-android": "npx cap run android && adb reverse tcp:3000 tcp:3000",
    "dev-ios": "npx cap run ios",
    "dev": "run-p dev:*",
    "dev:css": "tailwindcss -w -i ./styles/global.css -o ./app/tailwind.css",
    "dev:remix": "cross-env NODE_ENV=development remix dev",
    "prisma-generate": "prisma generate",
    "prisma-seed": "prisma db seed",
    "prisma-push": "prisma db push",
    "prisma-studio": "prisma studio",
    "format": "prettier --write app"
  },
  "dependencies": {
    "@capacitor/android": "^5.0.0",
    "@capacitor/app": "^5.0.0",
    "@capacitor/core": "^5.0.0",
    "@capacitor/ios": "^5.0.0",
    "@capacitor/preferences": "^5.0.0",
    "@capacitor/push-notifications": "^5.0.0",
    "@capacitor/share": "^5.0.0",
    "@capacitor/splash-screen": "^5.0.0",
    "@headlessui/react": "^1.7.9",
    "@knocklabs/node": "^0.4.16",
    "@knocklabs/react-notification-feed": "^0.8.3",
    "@mojs/core": "^1.4.0",
    "@prisma/client": "^4.9.0",
    "@react-hook/hotkey": "^3.1.0",
    "@remix-run/node": "^1.12.0",
    "@remix-run/react": "^1.12.0",
    "@remix-run/vercel": "^1.12.0",
    "@vercel/node": "^2.6.2",
    "bcryptjs": "^2.4.3",
    "date-fns": "^2.29.3",
    "framer-motion": "^10.12.8",
    "nprogress": "^0.2.0",
    "postmark": "^3.0.15",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-infinite-scroll-hook": "^4.0.4",
    "react-popper": "^2.3.0",
    "reading-time": "^1.5.0",
    "remix-auth": "^3.4.0",
    "remix-auth-form": "^1.3.0",
    "remix-auth-google": "^1.2.0",
    "remix-utils": "^6.0.0"
  },
  "devDependencies": {
    "@capacitor/cli": "^5.0.0",
    "@remix-run/dev": "^1.12.0",
    "@remix-run/eslint-config": "^1.12.0",
    "@remix-run/serve": "^1.12.0",
    "@tailwindcss/forms": "^0.5.3",
    "@tailwindcss/typography": "^0.5.9",
    "@types/bcryptjs": "^2.4.2",
    "@types/nprogress": "^0.2.0",
    "@types/react": "^18.0.27",
    "@types/react-dom": "^18.0.10",
    "cross-env": "^7.0.3",
    "eslint": "^8.33.0",
    "npm-run-all": "^4.1.5",
    "prettier-plugin-organize-imports": "^3.2.2",
    "prettier-plugin-tailwindcss": "^0.2.3",
    "prisma": "^4.9.0",
    "tailwindcss": "^3.2.4",
    "typescript": "^5.0.4"
  },
  "engines": {
    "node": ">=16"
  },
  "sideEffects": false
}