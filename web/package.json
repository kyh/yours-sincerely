{
  "private": true,
  "name": "yours-sincerely-web",
  "description": "An ephemeral anonymous blog to send each other tiny beautiful letters",
  "license": "MIT",
  "prisma": {
    "seed": "npx ts-node -T prisma/seed.ts"
  },
  "scripts": {
    "build": "run-s build:prisma build:css build:worker build:remix",
    "build:prisma": "npm run prisma:generate",
    "build:css": "tailwindcss -m -i ./styles/global.css -o ./app/tailwind.css",
    "build:remix": "cross-env NODE_ENV=production remix build",
    "build:worker": "esbuild ./app/entry.worker.ts --outfile=./public/entry.worker.js --minify --bundle --format=esm --define:process.env.NODE_ENV='\"production\"'",
    "dev": "run-p dev:*",
    "dev:css": "tailwindcss -w -i ./styles/global.css -o ./app/tailwind.css",
    "dev:remix": "cross-env NODE_ENV=development remix dev",
    "dev:worker": "esbuild ./app/entry.worker.ts --outfile=./public/entry.worker.js --bundle --format=esm --define:process.env.NODE_ENV='\"development\"' --watch",
    "start": "remix-serve build",
    "prisma:generate": "prisma generate",
    "prisma:reset": "prisma migrate reset",
    "prisma:seed": "prisma db seed",
    "prisma:push": "prisma db push",
    "prisma:studio": "prisma studio"
  },
  "dependencies": {
    "@headlessui/react": "^1.7.7",
    "@mojs/core": "^1.4.0",
    "@prisma/client": "^4.8.0",
    "@react-hook/hotkey": "^3.1.0",
    "@remix-run/node": "^1.9.0",
    "@remix-run/react": "^1.9.0",
    "@remix-run/serve": "^1.9.0",
    "@remix-run/vercel": "^1.9.0",
    "bcrypt": "^5.1.0",
    "date-fns": "^2.29.3",
    "dotenv-cli": "^6.0.0",
    "framer-motion": "^8.0.2",
    "nprogress": "^0.2.0",
    "postmark": "^3.0.15",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-infinite-scroll-hook": "^4.0.4",
    "react-popper": "^2.3.0",
    "remix-auth": "^3.4.0",
    "remix-auth-form": "^1.3.0",
    "remix-auth-google": "^1.2.0",
    "remix-utils": "^5.1.0",
    "web-push": "^3.4.5"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.9.0",
    "@remix-run/eslint-config": "^1.9.0",
    "@remix-run/serve": "^1.9.0",
    "@tailwindcss/forms": "^0.5.3",
    "@tailwindcss/typography": "^0.5.8",
    "@types/bcrypt": "^5.0.0",
    "@types/nprogress": "^0.2.0",
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.9",
    "cross-env": "^7.0.3",
    "eslint": "^8.30.0",
    "npm-run-all": "^4.1.5",
    "prisma": "^4.8.0",
    "tailwindcss": "^3.2.4",
    "typescript": "^4.9.4"
  },
  "engines": {
    "node": ">=16"
  },
  "sideEffects": false
}
