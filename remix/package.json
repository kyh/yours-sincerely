{
  "private": true,
  "name": "remix-app-template",
  "description": "",
  "license": "",
  "type": "commonjs",
  "prisma": {
    "seed": "npx ts-node -T prisma/seed.ts"
  },
  "scripts": {
    "build": "npm run build:css && remix build",
    "build:css": "tailwindcss -i ./styles/global.css -o ./app/tailwind.css --minify",
    "dev": "concurrently \"npm run dev:css\" \"remix dev\"",
    "dev:css": "tailwindcss -i ./styles/global.css -o ./app/tailwind.css --watch",
    "postinstall": "remix setup node",
    "start": "remix-serve build",
    "docker:start": "docker-compose up -d",
    "docker:stop": "docker-compose down",
    "prisma:generate": "dotenv -e .env.local -- prisma generate",
    "prisma:migrate:dev": "dotenv -e .env.local -- prisma migrate dev",
    "prisma:migrate:prod": "dotenv -e .env.local -- prisma migrate deploy",
    "prisma:reset": "dotenv -e .env.local -- prisma migrate reset",
    "prisma:seed": "dotenv -e .env.local -- prisma db seed"
  },
  "dependencies": {
    "@headlessui/react": "^1.4.2",
    "@mojs/core": "^1.2.1",
    "@prisma/client": "^3.7.0",
    "@remix-run/react": "^1.1.1",
    "@remix-run/serve": "^1.1.1",
    "bcrypt": "^5.0.1",
    "date-fns": "^2.28.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "remix": "^1.1.1",
    "remix-auth": "^3.0.1",
    "remix-auth-form": "^1.0.0",
    "remix-auth-google": "^1.0.0"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.1.1",
    "@tailwindcss/typography": "^0.5.0",
    "@types/bcrypt": "^5.0.0",
    "@types/react": "^17.0.24",
    "@types/react-dom": "^17.0.9",
    "concurrently": "^6.5.1",
    "prisma": "^3.7.0",
    "tailwindcss": "^3.0.7",
    "typescript": "^4.1.2"
  },
  "engines": {
    "node": ">=14"
  },
  "sideEffects": false
}
